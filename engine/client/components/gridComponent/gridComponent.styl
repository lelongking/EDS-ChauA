@require 'jeet'
@import 'rupture'
@import "../../styles/lib.import.styl"

.igrid
  .igrid-header
    flex: 0 0 auto
    span.title
      padding-left 5px
    span.icon
      float right; margin-right 5px
      font-size 16px
  .igrid-content
    clearfix()
    overflow-y scroll
    overflow-x hidden
    &::-webkit-scrollbar
      width 5px
    .item-wrapper
      margin-right 5px !important
      +below(1024px)
        span(1)
      +above(1024px)
        span(1)
      +above(1400px)
        span(49/100)